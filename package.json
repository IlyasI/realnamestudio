{
  "name": "realnamestudio",
  "version": "1.0.0",
  "description": "realname studio - we build cool stuff",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "build": "echo 'No build step needed - static site'",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint .",
    "lint:css": "stylelint \"**/*.{css,html}\"",
    "lint:html": "htmlhint \"**/*.html\"",
    "format": "prettier --write \"**/*.{js,html,css,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,html,css,json,md}\"",
    "lint:fix": "eslint . --fix && stylelint \"**/*.{css,html}\" --fix && prettier --write \"**/*.{js,html,css,json,md}\""
  },
  "keywords": [
    "dev-studio",
    "web-development"
  ],
  "author": "realname studio",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "vercel": "^48.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-html": "^8.1.3",
    "htmlhint": "^1.7.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IlyasI/realnamestudio.git"
  },
  "bugs": {
    "url": "https://github.com/IlyasI/realnamestudio/issues"
  },
  "homepage": "https://github.com/IlyasI/realnamestudio#readme"
}
